{
  "name": "pyxus",
  "version": "1.0.0",
  "description": "Ground Control Station for MAVLink drones",
  "main": "main.js",
  "scripts": {
    "start": "electron . --dev",
    "start:prod": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "Pyxus",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.pyxus.gcs",
    "productName": "Pyxus",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*.py",
          "!__pycache__/**",
          "!*.pyc"
        ]
      },
      {
        "from": "../frontend/dist",
        "to": "frontend/dist"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "icons/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
